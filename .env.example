# Ada Maritime AI - Environment Configuration

# ============================================
# Core API Keys
# ============================================
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# Database Configuration
# ============================================
POSTGRES_PASSWORD=ada_dev_password
NEO4J_PASSWORD=ada_dev_password
POSTGRES_URL=postgresql://ada:ada_dev_password@localhost:5432/ada_ecosystem
REDIS_URL=redis://localhost:6379
QDRANT_URL=http://localhost:6333
NEO4J_URL=bolt://localhost:7687

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENV=development

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ============================================
# Email/SMTP Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=Ada Maritime AI <noreply@adamaritime.ai>

# ============================================
# VHF/SDR Configuration
# ============================================
SDR_ENABLED=true
SDR_SAMPLE_RATE=2400000
SDR_CENTER_FREQ=156500000
VHF_RECORDING_PATH=./recordings
VHF_CHANNELS=16,6,72,73
VHF_SCAN_INTERVAL=1.0

# ============================================
# VERIFY Agent - Compliance Configuration
# ============================================
COMPLIANCE_AUDIT_SCHEDULE=0 6 * * *
INSURANCE_CHECK_DAYS_THRESHOLD=30
PERMIT_NOTIFICATION_HOURS=2
VIOLATION_ALERT_EMAIL=marina_manager@example.com

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/ada_maritime.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
